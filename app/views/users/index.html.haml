.panel.panel-default
  .panel-heading
    %h2 Listing users
  .panel-body

    .panel.panel-default
      .table-responsive
        %table.table.table-striped.table-hover.table-condensed
          %tr
            %th Name
            %th
            %th
            %th
          - users.each do |user|
            %tr
              %td= user.email
              %td
                %span.glyphicon.glyphicon-eye-open
                = link_to 'Show', user,  class: "lbl-size label label-default"
                - if (signed_in?(:user) && current_user.admin) || (signed_in?(:user) && current_user.id==user.id)
                  %td
                    %span.glyphicon.glyphicon-edit
                      = link_to 'Edit', edit_user_path(user),  class: "lbl-size label label-success"
                  %td
                    %span.glyphicon.glyphicon-minus-sign
                      = link_to 'Destroy', user,  class: "lbl-size label label-danger", method: :delete, data: { confirm: 'Are you sure?' }
                - else
                  %td
                  %td
      .panel-footer Users count: #{@userCount}









    %br
    - if signed_in?(:user)
      - if current_user.admin?
        = link_to 'New User', new_user_path,  class: "btn btn-primary"
