.panel.panel-default
  .panel-heading

    .panel-body

      = form_for user do |f|
        - if user.errors.any?
          #error_explanation
            %h2= "#{pluralize(user.errors.count, "error")} prohibited this category from being saved:"
            %ul
              - user.errors.full_messages.each do |msg|
                %li= msg

        .form-group
          = f.label :email
          = f.text_field :email, class: 'form-control'

          = f.submit 'Save', class: 'btn btn-default'
